# Afrifutures Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Database
# =============================================================================
# Turso Database (LibSQL)
DATABASE_URL="libsql://your-database.turso.io"
DATABASE_AUTH_TOKEN="your-auth-token"

# =============================================================================
# Authentication (Clerk)
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# =============================================================================
# AI & Data APIs
# =============================================================================

# Groq AI (for predictions) - Required
# Get your API key: https://console.groq.com/keys
GROQ_API_KEY="gsk_..."

# Alpha Vantage (for live commodity prices) - Optional but recommended
# Free tier: 25 requests/day
# Get your API key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY="YOUR_ALPHA_VANTAGE_KEY_HERE"

# World Bank API - No key required, used as fallback
# Documentation: https://datahelpdesk.worldbank.org/knowledgebase/articles/889392

# =============================================================================
# Blockchain (Polygon)
# =============================================================================

# Polygon RPC Endpoints
# Amoy Testnet (Mumbai is deprecated as of April 2024)
POLYGON_AMOY_RPC="https://rpc-amoy.polygon.technology"
POLYGON_RPC="https://polygon-rpc.com"

# Deployment Private Key (DO NOT commit this!)
# Use a dedicated wallet for deployment, not your main wallet
PRIVATE_KEY="your-private-key-here"

# PolygonScan API Key (for contract verification)
# Get your API key: https://polygonscan.com/apis
POLYGONSCAN_API_KEY="9W61ZR8GVIM2ZHTZ5SD3KT9JPUPGR4MXBQ"

# USDC Token Address
# Amoy Testnet: 0x41E94Eb019C0762f9Bfcf9Fb1E58725BfB0e7582
# Polygon Mainnet: 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
USDC_ADDRESS="0x41E94Eb019C0762f9Bfcf9Fb1E58725BfB0e7582"

# Smart Contract Addresses (fill after deployment)
NEXT_PUBLIC_PREDICTION_MARKET_ADDRESS="your-contract-address-here"
NEXT_PUBLIC_USDC_ADDRESS="0x41E94Eb019C0762f9Bfcf9Fb1E58725BfB0e7582"
NEXT_PUBLIC_CHAIN_ID="80002"  # 80002 = Amoy, 137 = Polygon Mainnet

# =============================================================================
# Optional: Analytics & Monitoring
# =============================================================================

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID="..."

# Sentry (error tracking)
# NEXT_PUBLIC_SENTRY_DSN="..."

# =============================================================================
# Optional: Weather Data (Phase 4)
# =============================================================================

# OpenWeatherMap API
# Get your API key: https://openweathermap.org/api
# OPENWEATHER_KEY="..."

# =============================================================================
# Development
# =============================================================================

# Next.js
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
